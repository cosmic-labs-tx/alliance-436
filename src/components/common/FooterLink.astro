---
import type { HTMLAttributes } from "astro/types";
import { cn } from "~/lib/utils";
type Props = HTMLAttributes<"a">;

const { class: className, ...rest } = Astro.props;
---

<a
  class:list={cn(
    "hover:decoration-accent -m-1 p-1 font-medium underline decoration-transparent decoration-2 underline-offset-4 transition duration-75 focus-visible:outline-2 focus-visible:outline-primary",
    className
  )}
  {...rest}><slot /></a
>
